{
	"name": "useless-module",
	"version": "1.0.0",
	"description": "Just a playground to test build and CI tools arround ESM.",
	"main": "src/index.js",
	"repository": "git@github.com:nutshell-lab/useless-module.git",
	"author": "Victor Rebiard--Cr√©pin <victor.rebiardcrepin@gmail.com>",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"test": "xo && nyc ava",
		"build": "pack build",
		"release": "pack publish"
	},
	"devDependencies": {
		"@babel/register": "^7.4.4",
		"@pika/pack": "^0.3.7",
		"@pika/plugin-build-node": "^0.3.16",
		"@pika/plugin-build-types": "^0.3.16",
		"@pika/plugin-copy-assets": "^0.3.16",
		"@pika/plugin-standard-pkg": "^0.3.16",
		"ava": "^1.4.1",
		"eslint-config-prettier-standard": "^2.0.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-standard": "^4.0.0",
		"nyc": "^14.1.0",
		"xo": "^0.24.0"
	},
	"@pika/pack": {
		"pipeline": [
			[
				"@pika/plugin-standard-pkg"
			],
			[
				"@pika/plugin-build-node"
			],
			[
				"@pika/plugin-build-types"
			],
			[
				"@pika/plugin-copy-assets",
				{
					"files": [
						"readme.md"
					]
				}
			]
		]
	},
	"xo": {
		"env": "node",
		"space": true,
		"semicolon": false,
		"extends": "prettier-standard"
	},
	"ava": {
		"require": [
			"@babel/register"
		]
	},
	"nyc": {
    "reporter": ["lcov"],
		"report-dir": "coverage"
  }
}
